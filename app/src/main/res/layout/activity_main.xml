<?xml version="1.0" encoding="utf-8"?>
<!-- This layout displays the main vertical activity for the program -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/mainActivityToolbar"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="@color/toolbarBackground"
        android:elevation="0dp"
        app:title="@string/toolbarTitle"
        app:titleTextColor="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="0dp">

        <TextView
            android:id="@+id/lastUpdatedText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lastUpdatedLoading"
            android:textSize="13sp"
            android:textColor="#000000"
            android:textStyle="bold"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/searchControlsFragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="0dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/legendText"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="#424242"
            android:layout_marginBottom="6dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="start">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/legendVStrong"
                android:textSize="11sp"
                android:textColor="#000000"
                android:backgroundTint="#81C784"
                android:paddingStart="2dp"
                android:paddingEnd="2dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:layout_marginEnd="6dp"
                android:enabled="false"
                android:clickable="false"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/legendStrong"
                android:textSize="11sp"
                android:textColor="#000000"
                android:backgroundTint="#64B5F6"
                android:paddingStart="2dp"
                android:paddingEnd="2dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:layout_marginEnd="6dp"
                android:enabled="false"
                android:clickable="false"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/legendWeak"
                android:textSize="11sp"
                android:textColor="#000000"
                android:backgroundTint="#FFB74D"
                android:paddingStart="2dp"
                android:paddingEnd="2dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:layout_marginEnd="6dp"
                android:enabled="false"
                android:clickable="false"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/legendVWeak"
                android:textSize="11sp"
                android:textColor="#000000"
                android:backgroundTint="#E57373"
                android:paddingStart="2dp"
                android:paddingEnd="2dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:enabled="false"
                android:clickable="false"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/mainCurrenciesHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/mainCurrenciesHeading"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:padding="8dp"
        android:background="#FFFFFF"
        android:gravity="start"/>

    <FrameLayout
        android:id="@+id/mainCurrenciesFragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:background="#FFFFFF">

        <TextView
            android:id="@+id/allCurrenciesHeading"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/allCurrenciesHeading"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="start"/>

        <Button
            android:id="@+id/showAllButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/showAllButton"
            android:textSize="12sp"
            android:padding="8dp"
            android:background="#1976D2"
            android:textColor="#000000"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/currencyListFragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>